<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gasolina_3010746.MainPage">

    <ScrollView>
        <VerticalStackLayout
         Spacing="25"
         Padding="30,0"
         VerticalOptions="Center">

            
            <Image Source="gasolina.png" 
                HeightRequest="200"
                WidthRequest="300"
                HorizontalOptions="Center"/>

            <Label Text="Digite cantidad de galones"
                FontSize="15"/>
            <Entry x:Name="canGas" Placeholder="Galones"
                Keyboard="Numeric"/>

            <Label Text="El costo total es: "
                HorizontalOptions="Center"
                FontAttributes="Bold"
                TextColor="MediumBlue"
                FontSize="18"
                x:Name="cosTotal"/>

            <Button Text="Calcular"
                 BackgroundColor="White"
                 BorderColor="MediumBlue"
                 BorderWidth="1"
                 Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
